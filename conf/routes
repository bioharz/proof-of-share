GET           /api/v1/notes                 controllers.NoteController.list(sort: String ?=null, query: String ?=null)

DELETE        /api/v1/notes/:id             controllers.NoteController.delete(id:Integer)

# user managment
GET           /login                        controllers.HomeController.login()

POST          /authenticate                 controllers.HomeController.authenticate()

GET           /logout                       controllers.HomeController.logout()

GET           /changepw                     controllers.HomeController.changePwPage()

+nocsrf
POST          /changepw                     controllers.HomeController.changePw()

